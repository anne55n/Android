<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anastassiyaneznanova.tt.MyActivity2"
    android:background="#fffff7f9">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/b3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:text="About Hiragana"
            android:id="@+id/textView"
            android:textStyle="italic|bold|"
            android:fontFamily="sans-serif"
            android:textSize="40px"
            android:textColor="#c8c34162"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The history of Hiragana dates back to 8-10 century.
Hiragana is one of the three character sets used in japan. Compared to Katakana, Hiragana letters have more curves. Hiragana was developed by simplification of some forms of Kanji letters.
        "
            android:textSize="30px"
            android:textStyle="bold"
            android:textColor="#e7000000"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"

            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Number of Letters"
            android:textAlignment="center"
            android:id="@+id/textView3"
            android:textStyle="italic|bold|"
            android:fontFamily="sans-serif"
            android:textSize="40px"
            android:textColor="#c8c34162"
            android:layout_below="@+id/textView2"
            android:layout_alignEnd="@+id/textView5" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textStyle="bold"
            android:textColor="#bc000000"
            android:text=" •There are 46 letters in  modern Hiragana."
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textStyle="bold"
            android:textColor="#ca000000"
            android:text="•In addition to 46 basic letters
            called Gojūon, there are 20
            modified forms to describe
         more sounds:"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textStyle="bold"
            android:textColor="#b8000000"
            android:text="     •20 Dakuon"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textStyle="bold"
            android:textColor="#b1000000"
            android:text="          •5 Handakuon"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textStyle="bold"
            android:textColor="#a4000000"
            android:text="•36 yōon"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textStyle="bold"
            android:textColor="#a5000000"
            android:text="   •1 sokuon"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textStyle="bold"
            android:textColor="#98000000"
            android:text="                     •6 additional letters"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id ="@+id/imageview1"
            android:background="@drawable/ht"
            android:layout_below="@+id/textView10"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</ScrollView>